fahsai.bus.ku.ac.th {
  encode zstd gzip

  @strapi path /strapi* handle @strapi {
    header {
      X-Forwarded-Proto {scheme}
      X-Forwarded-Host  {host}
      X-Forwarded-Prefix /strapi
    }
    # --- ส่วนที่แก้ไข ---
    # ลบ handle_path ออก แล้วใช้ reverse_proxy โดยตรง
    reverse_proxy http://strapi:1338
  }

  handle_path /phpmyadmin* {
    reverse_proxy http://phpmyadmin:80
  }

  # ที่เหลือให้ไป Next.js
  handle {
    reverse_proxy http://next:3000
  }
}